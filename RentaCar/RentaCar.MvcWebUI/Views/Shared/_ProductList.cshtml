@using Abc.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<html>
<head>
    <style type="text/css">
        .card-horizontal {
            display: flex;
            flex: 1 1 auto;
        }
    </style>

    <link rel="stylesheet" href="~/Content/jquery-ui.css">
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/theme/css/blog-home.css" rel="stylesheet">
</head>
<body>
    <div>
        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Bu kategoride bir ürün bulunamadı.
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-check-square" aria-hidden="true"></i>
                <strong>@Model.Count() adet</strong> ürün bulundu.
            </div>
        }
    </div>
    @foreach (var urun in Model)
    {

        <div class="card">
            <div class="card-horizontal">
                <div class="img-square-wrapper">
                    <img class="" src="/Upload/@urun.Image" alt="@urun.Model" width="250" height="180">
                </div>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@urun.Id"> @urun.Model</a>
                    </h4>
                    <p class="card-text pt-2 Description">
                        @urun.Class
                    </p>
                </div>
            </div>
            <div class="card-footer">
                <small class="text-muted product-price">
                    <i class="fa fa-try" aria-hidden="true"></i>
                    @urun.DaysPrice
                </small>
                <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                    Ürünü incele
                </a>
            </div>
        </div>
        <br />
    }


</body>
</html>
  